.container(ng-controller="HomeController")
  %nav.navbar.navbar-static-top.navbar-inverse(role="navigation")
    .container-fluid
      .navbar-header.pull-left
        %a.navbar-brand(href="#")
          =image_tag "logo.png", height: '20'
          Refinder
  #main
    .row
      .col-sm-6
        #first_page_title.search_tips.list-group
          .list-group-item
            %button.btn.btn-default.btn-sm(type="button" ng-if="criteria.criteria_text")
              Jarrupalat
              %span.glyphicon.glyphicon-remove(aria-hidden="true")
            .search_input
              %input#search_control.form-control(type="search" placeholder="Search" ng-change="handle_search_criteria_change()" ng-model="criteria.criteria_text" ng-focus="input_focus_changed($event)")
              %span.glyphicon.glyphicon-search(ng-click="handle_search_button_click()")
          .search_section.list-group-item(ng-if="showtips && !criteria.criteria_text")
            %div
              %p
                Search by entering car manufacturer, model, year of manufacturing, category
                or some text from the product, for instance: "opel astra 1999 jarrupalat".
                Tips will show when you enter at least 3 characters of each word.
          .search_section.list-group-item(ng-if="criteria.criteria_text")
            .search_section_name 
              %span.badge Categories
            .search_section_content
            %button.btn.btn-default.btn-sm(type="button")
              %span.badge
                %span.glyphicon.glyphicon-list-alt
              Jarrupalat
            %button.btn.btn-default.btn-sm(type="button")
              Jarrulevyt
            %button.btn.btn-default.btn-sm(type="button")
              Putkit
            %button.btn.btn-default.btn-sm(type="button")
              Letkut
          .search_section.list-group-item(ng-if="criteria.criteria_text")
            .search_section_name 
              %span.badge Car models
            .search_section_content
            %button.btn.btn-default.btn-sm(type="button")
              Honda
            %button.btn.btn-default.btn-sm(type="button")
              VW
            %button.btn.btn-default.btn-sm(type="button")
              Audi
            %button.btn.btn-default.btn-sm(type="button")
              Subaru
          
          
          
          
          
          
          
          
          
          
          
          
          
