= form_for @car_brand do |f|
  - if @car_brand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@car_brand.errors.count, "error")} prohibited this car_brand from being saved:"
      %ul
        - @car_brand.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :manufacturer
    = f.text_field :manufacturer
  .actions
    = f.submit 'Save'
